@page
@model Project334.Pages.BusinessActivities.CreateModelNew

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center">
    <div class="shadow p-3 m-3 bg-light rounded-lg col-md-6">
        <h4 class="display-4">Add Business Activity</h4>
        <hr class="my-4">
    </div>
</div>


<div class="d-flex justify-content-center">
    <div class="shadow p-3 m-3 bg-light rounded-lg col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BusinessActivity.BusinessID" class="control-label"></label>
                <input asp-for="BusinessActivity.BusinessID" value="@ViewContext.HttpContext.Request.Query["id"]" class="form-control" readonly="readonly" />
                <span asp-validation-for="BusinessActivity.BusinessID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusinessActivity.WorkingDate" class="control-label"></label>
                <input asp-for="BusinessActivity.WorkingDate" class="form-control" />
                <span asp-validation-for="BusinessActivity.WorkingDate" class="text-danger"></span>
                @Html.ValidationMessageFor(m => m.BusinessActivity)
            </div>
                <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-center">
    <div class="col-md-6">
        <a class="btn btn-primary" role="button" asp-page="/Businesses/Details" asp-route-id=@ViewContext.HttpContext.Request.Query["id"]>Back to activity</a>
     </div>
 </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
