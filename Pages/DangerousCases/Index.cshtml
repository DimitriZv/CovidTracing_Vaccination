@page
@model Project334.Pages.DangerousCases.IndexModel

@{
    ViewData["Title"] = "DangerousCases";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Dangerous Cases</h1>
        <hr class="my-4">
        <a class="btn btn-info" asp-page="Create" role="button">Create New</a>
    </div>
</div>

@*<p class="badge bg-info text-wrap text-center" style="width: 8rem; height:1.5rem;">
    <a class="text-white" asp-page="Create">Create New</a>
</p>*@

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                <a class="text-info" asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                    @Html.DisplayNameFor(model => model.DangerousCases[0].LastName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DangerousCases[0].FirstMidName)
            </th>
            <th>
                <a class="text-info" asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.DangerousCases[0].ConfirmDate)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DangerousCases[0].MobilePhone)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.DangerousCases[0].FullName)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.DangerousCases[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DangerousCases[0].DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DangerousCases[0].Sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DangerousCases[0].HasVaccine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DangerousCases)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstMidName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfirmDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobilePhone)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>*@
                <td class="text-white">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                @if (item.HasVaccine == true)
                {
                    <td>Yes</td>
                }
                @if (item.HasVaccine == false)
                {
                    <td>No</td>
                }
                <td>
                    <a class="text-white" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a class="text-info" asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a class="text-white" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
