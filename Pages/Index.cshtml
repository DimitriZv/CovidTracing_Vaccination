@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form asp-page="Pages/Index" method="get">
    <div class="input-group input-group-lg">
        <span class="input-group-text">Category</span>
        <select name="Category" @Model.CurrentFilterCase class="form-select col-md-4">
            <option selected value="Business">Business</option>
            <option value="Medical">Medical Places</option>
            @if (Model.User.IsInRole("Admin") || Model.User.IsInRole("Medical") || Model.User.IsInRole("Government"))
            {
                <option value="DangerousCases">DangerousCases</option>
                <option value="Patient">Patient</option>
                <option value="Vaccine">Vaccines</option>
                <option value="Visitor">Visitors</option>
            }
        </select>
        <input class="col-md-6" type="text" name="SearchString" value="@Model.CurrentFilter" />
        <input type="submit" value="Search" class="btn btn-primary" />
        <span class="input-group-text"> </span>
        <a class="btn btn-info" asp-page="./Index">Remove</a>
    </div>
</form>



@if (Model.Business != null && Model.Business.Count != 0)
{
    <table class="table table-warning table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Business[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Business[0].Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Business[0].FullAddress)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Business)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullAddress)
                    </td>
                    <td>
                        @*<!--onclick="return false;"-->*@
                        <a class="text-primary text-decoration-none" asp-page="Businesses/Details" asp-route-id="@item.ID">Details</a> |
                        @if (Model.User.IsInRole("Admin") || Model.User.IsInRole("Government"))
                        {
                            <a class="text-primary text-decoration-none" asp-page="Businesses/Delete" asp-route-id="@item.ID">Delete</a>
                        }
                </tr>
            }
        </tbody>
    </table>
}

