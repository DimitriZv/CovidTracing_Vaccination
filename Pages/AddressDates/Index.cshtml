@page
@model Project334.Pages.AddressDates.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="shadow p-3 m-3 bg-light rounded-lg">
    <h1 class="display-4">Dangerous Addresses</h1>
    <hr class="my-4">
    <a class="btn btn-info" asp-page="Create" role="button">Create New</a>
</div>

<table class="font-monospace table table-info table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AddressDate[0].StreetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressDate[0].StreetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressDate[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressDate[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressDate[0].ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressDate[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressDate[0].DateOfVisit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AddressDate)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfVisit)
                </td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Government"))
                    {
                        <a class="text-primary text-decoration-none" asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                        <a class="text-primary text-decoration-none" asp-page="./Details" asp-route-id="@item.ID">Details</a>
                        <a class="text-primary text-decoration-none" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    }
                    else 
                    {
                        <a class="text-primary text-decoration-none" asp-page="./Details" asp-route-id="@item.ID">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
