@page
@model Project334.Pages.Alerts.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Alert</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alert.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alert.Comment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alert.DangerousCase)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alert.DangerousCase.Email)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alert.DangerousCase.FullName)
        </dd>

    </dl>
</div>

@if (Model.Alert.DangerousCase.VisitedPlaces != null && Model.Alert.DangerousCase.VisitedPlaces.Count != 0)
{
<div class="badge bg-danger text-wrap fs-5" style="width: 16rem;">Visited Addresses Added Manually</div>
<table class="font-monospace table table-danger table-striped table-hover col-md-10">
    <tr>
        <th>Date of Visit</th>
        <th>Street Number</th>
        <th>Street Name</th>
        <th>City</th>
        <th>State</th>
        <th>Zip Code</th>
        <th>Country</th>
    </tr>
    @foreach (var item in Model.Alert.DangerousCase.VisitedPlaces)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfVisit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
        </tr>
    }
</table>
}


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Alert.AlertID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
