@page
@model Project334.Pages.Patients.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="shadow p-3 m-3 bg-light rounded-lg">
    <h1 class="display-4">Medical Patients</h1>
    <hr class="my-4">
    <a class="btn btn-success" asp-page="Create" role="button">Create New</a>
</div>

<table class="font-monospace table table-success table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].MobilePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].HadVirus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Patient)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MobilePhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td class="text-primary text-decoration-none">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            @if (item.HadVirus == true)
            {
                <td>Yes</td>
            }
            @if (item.HadVirus == false)
            {
                <td>No</td>
            }
            <td>
                <a class="text-primary text-decoration-none" asp-page="./Details" asp-route-id="@item.ID">Details</a>
                @*<a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
